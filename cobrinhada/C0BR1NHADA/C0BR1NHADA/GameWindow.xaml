<Window x:Class="Cobrinhada.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="C0BR1NHADA"
        WindowState="Maximized"
        WindowStyle="None"
        KeyDown="Window_KeyDown"
        Background="Black">

    <Grid Name="RootGrid">
        <!-- Canvas do jogo -->
        <Canvas Name="GameCanvas"
                Background="Black"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"/>

        <!-- Lista de power-ups -->
        <ListBox Name="PowerUpsListBox" 
                 Width="150" Height="100" 
                 Background="#33000000" 
                 Foreground="White" 
                 FontWeight="Bold"
                 Margin="10" 
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"/>

        <!-- Placar -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top"
                    Margin="0,10,10,0">
            <TextBlock Name="ScoreText"
                       Text="Pontos: 0"
                       FontSize="20"
                       Foreground="White"
                       Margin="0,0,15,0"
                       FontWeight="Bold"/>
            <TextBlock Name="BestScoreText"
                       Text="Recorde: 0"
                       FontSize="20"
                       Foreground="White"
                       FontWeight="Bold"/>
        </StackPanel>

        <!-- Tela de pausa -->
        <Grid Name="PauseOverlay"
              Background="#99000000"
              Visibility="Collapsed">
            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="#FF222222"
                    Padding="20"
                    CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="PAUSADO"
                               FontSize="40"
                               Foreground="White"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <Button Name="ResumeButton"
                            Content="Retornar ao Jogo (Esc)"
                            Width="200"
                            Margin="0,0,0,10"
                            Click="ResumeButton_Click"/>
                    <Button Name="MenuButton"
                            Content="Voltar ao Menu"
                            Width="200"
                            Click="MenuButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
